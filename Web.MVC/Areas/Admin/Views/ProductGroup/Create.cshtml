@model EnF.ProductGroup

@{
    ViewBag.Title = "Thêm mới nhóm gói cước";
}

<div style="margin-top: 45px; background: #eee;">
    <h3>
        <a href="/Admin/ProductGroup/Index?categoryId=@ViewBag.categoryId">@ViewBag.categoryName</a>
    </h3>
</div>
<hr />
<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Create", "ProductGroup", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.Label("Tên", new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Name)
            </div>

        </div>

        <div class="form-group">
            @Html.Label("Vị trí", new { @class = "control-label col-md-2" })
            <div class="col-md-5">
                <input type="number" name="Pos" class = "form-control" />
             
                @Html.ValidationMessageFor(model => model.Name)
            </div>

        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm" class="btn btn-default" />
            </div>
        </div>

        <div class="form-actions no-color">            
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
}


