@model IEnumerable<EnF.Comment>

@{
    ViewBag.Title = "Index";
}

<h2>Danh sách comment</h2>

<div class="panel panel-primary color noneborder">
    <div class="panel-heading colortheme noneborder">
        <div class="titletable">@ViewBag.Title </div>
        <ul class="list-unstyled menu">

            <li>
                <i class="fa fa-plus-square-o"></i>
                @Html.ActionLink("Thêm mới", "Create", new { ProductGroupID = ViewBag.ProductGroupID })

            </li>



            <li>
                <a href="#" onclick="ReloadCurrentPage()">
                    <i class="fa fa-refresh"></i> Nạp lại
                </a>
            </li>



        </ul>
        <div class="clearfix"></div>
    </div>
    <div class="panel-body">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
               
                <th>
                    @Html.DisplayNameFor(model => model.Comment1)
                </th>
                <th>
                   Hình
                </th>

                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                  
                    <td>
                        @Html.DisplayFor(modelItem => item.Comment1)
                    </td>
                    <td>
                      <img src="/@item.Image" height="90" />
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        
                        <a href="/Admin/Comment/Delete/@item.Id" onclick="return ConfirmDel()">Xóa</a>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
<script type="text/javascript">
    function ConfirmDel() {
        var rs = confirm("Chắc chắn muốn xóa");
        if (rs == false) {
            return false;
        }

    }

</script>